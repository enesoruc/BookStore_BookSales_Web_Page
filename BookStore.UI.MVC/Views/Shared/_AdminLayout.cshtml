    <script>
        $("#btnDelete").click(function () {
            var bookID = $(this).attr("data-bookID");
            var authorID = $(this).attr("data-authorID");
            var publishingHouseID = $(this).attr("data-publishingHouseID");
            var url = null;
            if (bookID != null) {
                url = "/Book/Delete/" + bookID;
            } else if (authorID != null) {
                url = "/Author/Delete/" + authorID;
            }
            else if (publishingHouseID != null) {
                url = "/PublishingHouse/Delete/" + publishingHouseID;
            }

            $.ajax({
                url: url,
                type: "GET",
                success: function (response) {
                    if (response == "ok") {
                        alert("Ürün Silindi");
                        window.location.reload();
                    }
                    else {
                        alert("Hata");
                    }
                }
            });
        });
    </script>
