@using BookStore.UI.MVC.Models
@model AdminLoginVM
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>AdminLogin</title>
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/admin/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/admin/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/admin/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>

        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>
    <!-- ============================================================== -->
    <!-- login page  -->
    <!-- ============================================================== -->
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="../index.html"><img class="logo-img" src="../assets/images/logo.png" alt="logo"></a><span class="splash-description">Giriş yapmak için bilgilerinizi giriniz.</span></div>
            <div class="card-body">
                <form method="post" action="/Account/AdminLogin">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control form-control-lg", placeholder = "Kullanıcı Adı", autocomplete = "off", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control form-caontrol-lg", placeholder = "Şifre", required = "required" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş Yap</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/Account/ForgotAdmin" class="footer-link">Şifremi Unuttum</a><br />
                    @if (ViewBag.result != null)
                    {
                        <span style="color:red">@ViewBag.result</span>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.result != null)
    {
        <script>alert("@ViewBag.result")</script>
    }

    <!-- ============================================================== -->
    <!-- end login page  -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <script src="~/admin/assets/libs/js/main-js.js"></script>
    <script src="~/BookStore/js/jquery-3.2.1.min.js"></script>

</body>

</html>
